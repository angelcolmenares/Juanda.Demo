@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h4">Counter</MudText>
<MudText Typo="Typo.h6">Current count: @currentCount</MudText>
<MudButton 
  Variant="Variant.Filled" 
  Color="Color.Primary" 
  OnClick="IncrementCount">@buttonText</MudButton>


@code {
    private int currentCount = 0;
    private string buttonText { get; set; } = "Click Me";

    private void IncrementCount()
    {
        currentCount++;
        buttonText=" click me again";

    }
}
